{
  "manifest_version": 2,
  "name": "Web to EPUB Pro",
  "version": "2.1",
  "description": "Batch download web articles to EPUB via local server.",
  "icons": { "48": "icon.png" },
  "permissions": [
    "activeTab",
    "tabs",
    "menus",
    "storage",
    "downloads",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "EPUB Manager",
    "default_popup": "popup.html"
  }
}
